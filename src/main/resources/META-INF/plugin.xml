<idea-plugin>
    <id>dev.alexengrig.intellij.plugins.hodgepodge-intellij-plugin</id>
    <name>Hodgepodge</name>
    <vendor email="alexengrig@gmail.com" url="https://github.com/alexengrig/hodgepodge-intellij-plugin">
        Alexengrig Dev.
    </vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
            serviceInterface="dev.alexengrig.intellij.plugins.hodgepodge.application.service.LimitNumberOfOpenProjectsService"
            serviceImplementation="dev.alexengrig.intellij.plugins.hodgepodge.application.service.impl.LimitNumberOfOpenProjectsServiceImpl"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <project-components>
        <component>
            <implementation-class>
                dev.alexengrig.intellij.plugins.hodgepodge.project.component.ProjectCounterComponent
            </implementation-class>
        </component>
    </project-components>
</idea-plugin>